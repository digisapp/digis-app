{
  "name": "digis-backend",
  "version": "1.0.0",
  "description": "Backend API for Digis - A platform connecting fans with creators through paid interactions with token economy",
  "main": "api/index.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node api/index.js",
    "dev": "nodemon api/index.js",
    "dev:debug": "nodemon --inspect api/index.js",
    "migrate": "node utils/migrate.js up",
    "migrate:down": "node utils/migrate.js down",
    "migrate:status": "node utils/migrate.js status",
    "migrate:reset": "node utils/migrate.js reset",
    "db:test": "node -e \"require('./utils/db').testConnection()\"",
    "db:seed": "node utils/seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "echo 'No build step required for Node.js'",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "logs": "tail -f logs/app.log",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "postinstall": "echo 'Backend dependencies installed successfully'"
  },
  "keywords": [
    "digis",
    "creator-economy",
    "video-calls",
    "streaming",
    "payments",
    "tokens",
    "nodejs",
    "express",
    "stripe",
    "agora",
    "supabase",
    "postgresql"
  ],
  "author": {
    "name": "Digis Team",
    "email": "dev@digis.com"
  },
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^10.12.0",
    "@sentry/profiling-node": "^10.12.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@supabase/supabase-js": "^2.51.0",
    "@upstash/redis": "^1.35.3",
    "agora-token": "^2.0.5",
    "argon2": "^0.43.1",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-prom-bundle": "^7.0.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "file-type": "^16.5.4",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.6.1",
    "isomorphic-dompurify": "^2.26.0",
    "joi": "^18.0.1",
    "jose": "^6.0.12",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.8",
    "pg": "^8.11.3",
    "postmark": "^4.0.5",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.2.2",
    "rate-limiter-flexible": "^5.0.5",
    "redis": "^4.6.12",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "stripe": "^18.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7",
    "winston": "^3.11.0",
    "ws": "^8.14.0",
    "xss": "^1.0.15",
    "xss-clean": "^0.1.4",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**",
      "!__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/setup.js",
      "/__tests__/helpers/"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "api/",
      "routes/",
      "utils/",
      "middleware/",
      "models/"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "logs/",
      "coverage/",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "delay": 1000
  }
}

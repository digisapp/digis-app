# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@host:5432/database_name

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Agora Configuration
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here
# Agora Cloud Recording (optional - for stream recording)
AGORA_CUSTOMER_KEY=your_agora_customer_key_here
AGORA_CUSTOMER_SECRET=your_agora_customer_secret_here

# Agora Chat Configuration
AGORA_CHAT_APP_KEY=your_org_name#your_app_name
AGORA_CHAT_ORG_NAME=your_org_name
AGORA_CHAT_APP_NAME=your_app_name
AGORA_CHAT_REST_API=a41.chat.agora.io
AGORA_CHAT_APP_TOKEN=your_agora_chat_app_token_here

# Server Configuration
PORT=3005
NODE_ENV=development
FRONTEND_URL=http://localhost:3006

# Token Economy Configuration
TOKEN_TO_USD_RATE=0.05
DEFAULT_TEXT_MESSAGE_PRICE=1
DEFAULT_IMAGE_MESSAGE_PRICE=2
DEFAULT_AUDIO_MESSAGE_PRICE=3
DEFAULT_VIDEO_MESSAGE_PRICE=5
PLATFORM_FEE_PERCENTAGE=0

# JWT Configuration (Enhanced Security)
JWT_ACCESS_SECRET=your_jwt_access_secret_here_min_64_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_min_64_chars
ROTATE_REFRESH_TOKENS=false # Set to true for maximum security

# Optional Configuration
LOG_LEVEL=info
REDIS_URL=redis://localhost:6379
JWT_SECRET=your_jwt_secret_here # Legacy - for backward compatibility
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Upstash Redis (Production Redis for serverless)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Postmark Email Service
POSTMARK_API_KEY=

# Sentry Error Tracking (optional but recommended for production)
# Get your DSN from https://sentry.io after creating a project
# This is your digis-backend project DSN
SENTRY_DSN=your_sentry_dsn_here

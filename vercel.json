{
  "version": 2,
  "buildCommand": "cd backend && npm install",
  "devCommand": "cd backend && npm run dev",
  "installCommand": "cd backend && npm install",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.js|.*\\.css|.*\\.mjs)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/bill-active-calls",
      "schedule": "* * * * *",
      "description": "Bill active calls every minute"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CRON_SECRET": "@cron-secret"
  }
}

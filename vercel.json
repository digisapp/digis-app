{
  "version": 2,
  "framework": null,
  "buildCommand": "cd backend && npm install && cd ../frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "backend/api/ping.js": {
      "runtime": "nodejs20.x",
      "memory": 512,
      "maxDuration": 10
    },
    "backend/api/index.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "^/api/ping$", "dest": "backend/api/ping.js" },
    { "src": "^/api/(.*)$", "dest": "backend/api/index.js" },
    { "src": "/(.*)",       "dest": "frontend/dist/$1" }
  ]
}
# Production Environment Configuration Template
# Copy this to .env.production and fill with your production values

# ===== BACKEND CONFIGURATION =====

# Database
DATABASE_URL=postgresql://username:password@your-production-db-host:5432/digis_production

# Supabase (Production)
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key

# Stripe (Production - Use live keys)
STRIPE_SECRET_KEY=sk_live_your_production_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Agora (Production)
AGORA_APP_ID=your_production_agora_app_id
AGORA_APP_CERTIFICATE=your_production_agora_certificate

# Server Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-production-domain.com

# JWT Security (Generate strong secrets)
JWT_SECRET=generate_strong_64_char_secret_here
JWT_ACCESS_SECRET=generate_strong_64_char_access_secret_here
JWT_REFRESH_SECRET=generate_strong_64_char_refresh_secret_here

# Redis (Production)
REDIS_URL=redis://your-production-redis-host:6379
UPSTASH_REDIS_REST_URL=your_upstash_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Sentry (Production)
SENTRY_DSN=your_production_sentry_dsn
SENTRY_ENVIRONMENT=production

# Email Service (Production)
POSTMARK_API_KEY=your_postmark_production_key

# ===== FRONTEND CONFIGURATION =====

# API Configuration
VITE_BACKEND_URL=https://api.your-domain.com
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key

# Stripe Public Key
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_publishable_key

# Agora Configuration
VITE_AGORA_APP_ID=your_production_agora_app_id

# Sentry Frontend
VITE_SENTRY_DSN=your_frontend_production_sentry_dsn
VITE_SENTRY_ENABLED=true

# Feature Flags
VITE_ANALYTICS_ENABLED=true
VITE_PWA_ENABLED=true
VITE_NOTIFICATIONS_ENABLED=true

# App Configuration
VITE_APP_NAME=Digis
VITE_APP_VERSION=2.0.0
VITE_APP_ENVIRONMENT=production
# Digis Platform Environment Variables
# Copy this file to .env and fill in your actual values

# === BACKEND CONFIGURATION ===

# Database Configuration
DATABASE_URL=postgresql://postgres:password@host:5432/database_name

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Agora Configuration
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here
AGORA_CUSTOMER_KEY=your_agora_customer_key_here
AGORA_CUSTOMER_SECRET=your_agora_customer_secret_here

# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://your-domain.com

# Optional Backend Configuration
LOG_LEVEL=info
REDIS_URL=redis://localhost:6379
JWT_SECRET=your_jwt_secret_here

# === FRONTEND CONFIGURATION ===

# Frontend Supabase Configuration (VITE_ prefix for Vite)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Frontend Backend Configuration
VITE_BACKEND_URL=https://your-api-domain.com

# Frontend Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Frontend Agora Configuration
VITE_AGORA_APP_ID=your-agora-app-id

# Frontend Feature Flags
VITE_ANALYTICS_ENABLED=true
VITE_PWA_ENABLED=true
VITE_NOTIFICATIONS_ENABLED=true

# Frontend Sentry Error Tracking (optional)
VITE_SENTRY_DSN=
VITE_SENTRY_ENABLED=false

# App Configuration
VITE_APP_NAME=Digis
VITE_APP_VERSION=2.0.0
VITE_USE_SUPABASE_STORAGE=true